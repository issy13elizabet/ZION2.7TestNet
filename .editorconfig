# Editor configuration, unify styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.ps1]
indent_size = 2
end_of_line = crlf

[*.{sh,bash}]
end_of_line = lf
indent_style = space
indent_size = 2

[*.{yml,yaml,Dockerfile}]
end_of_line = lf
indent_style = space
indent_size = 2
