# Zion v2.5 Testnet - Runtime Addresses (Z3 prefix)
# Copy this file to .env and fill in real addresses starting with Z3...

# Pool payout wallet (receives block rewards)
POOL_ADDRESS=

# Developer donation wallet (optional)
DEV_ADDRESS=

# Core-dev donation wallet (optional)
CORE_DEV_ADDRESS=

# --- Wallet Adapter ---
# API klíč je povinný v produkci (X-API-KEY header)
ADAPTER_API_KEY=
# Povolné originy pro CORS (čárkou oddělené). V dev lze ponechat prázdné a bude povolen localhost.
CORS_ORIGINS=http://localhost:3000
# Síťové bindy a porty
ADAPTER_PORT=18099
ADAPTER_BIND=0.0.0.0
WALLET_RPC=http://walletd:8070/json_rpc
SHIM_RPC=http://zion-rpc-shim:18089/json_rpc

# --- Zion daemon RPC ---
# CORS origins pro ziond (např. http://frontend:3000). Pokud prázdné, CORS je vypnuté.
ZION_RPC_CORS_ORIGINS=
# Na jakou IP se má vázat RPC; pro produkci doporučeno interní rozhraní
ZION_RPC_BIND=0.0.0.0

# --- Pool ---
POOL_PORT=3334

# --- Legacy daemon bridge (real chain integration) ---
# Enable bridge to legacy C++ daemon providing real chain data
EXTERNAL_DAEMON_ENABLED=false
# URL of the legacy daemon RPC (internal docker service recommended when containerized)
DAEMON_RPC_URL=http://legacy-daemon:18081
# Require real daemon (disable all mock fallbacks; fail fast if unavailable)
STRICT_BRIDGE_REQUIRED=false
# Pool template wallet & reserve size for get_block_template
TEMPLATE_WALLET=Z3_PLACEHOLDER_POOL_ADDRESS
TEMPLATE_RESERVE_SIZE=8
BRIDGE_TIMEOUT_MS=4000

# Phase 3 – PoW share validation (placeholder)
POW_VALIDATION_ENABLED=false
# Nižší target = vyšší obtížnost; placeholder pro testování validace
POW_PLACEHOLDER_TARGET=00000fffffffffffffffffffffffffffffffffffffffffffffffffffffffffff

# --- Bitcoin/Lightning ---
# Použito docker-compose.lightning.yml a bitcoin.conf
BITCOIN_RPCUSER=change_me
BITCOIN_RPCPASSWORD=change_me
# Omezte rozsah přístupu na interní síť dockeru
BITCOIN_RPCALLOWIP=172.20.0.0/16
