# ==================================================
# ZION 2.6.5 TestNet Configuration
# ==================================================

# Core service HTTP port (external mapping kvůli SSH server konfliktům)
PORT=8602

# Stratum TCP port (external mapping kvůli SSH server konfliktům)  
STRATUM_PORT=3334

# Initial static difficulty (placeholder until vardiff)
INITIAL_DIFFICULTY=1000

# ==================================================
# External Daemon Bridge Configuration (Phase 2/3)
# ==================================================

# External daemon (legacy C++ core) integration
# Set to true to enable bridge to legacy daemon for real block templates / height / difficulty
EXTERNAL_DAEMON_ENABLED=false
DAEMON_RPC_URL=http://127.0.0.1:18081
TEMPLATE_WALLET=Z3_PLACEHOLDER_POOL_ADDRESS
TEMPLATE_RESERVE_SIZE=8
BRIDGE_TIMEOUT_MS=4000

# Strict mode: require real legacy daemon; startup fails fast if unavailable
# When enabled, all mock/synthetic fallbacks are disabled (no synthetic jobs, no mock heights)
STRICT_BRIDGE_REQUIRED=false

# ==================================================
# Real Data Integration Configuration (Phase 3)
# ==================================================

# RandomX Validation
RANDOMX_VALIDATION_ENABLED=true
RANDOMX_CACHE_SIZE=2048
RANDOMX_DATASET_MODE=fast
RANDOMX_FLAGS=default

# Real Data Manager
REALDATA_SYNC_INTERVAL=5000
REALDATA_CACHE_TTL=10000
REALDATA_METRICS_ENABLED=true

# Enhanced Mining Pool
ENHANCED_POOL_ENABLED=true
ENHANCED_VALIDATION_ENABLED=true
MINING_TEMPLATE_CACHE_TTL=20000
SHARE_VALIDATION_TIMEOUT=5000

# Real Data API
REALDATA_API_ENABLED=true
REALDATA_API_PREFIX=/api/realdata
MONITORING_METRICS_INTERVAL=5000
ADMIN_ENDPOINTS_ENABLED=true

# ==================================================  
# Network & P2P Configuration
# ==================================================

# P2P Network
P2P_PORT=8080
P2P_SEEDS=seed1.zion.network:8080,seed2.zion.network:8080
P2P_MAX_PEERS=50

# ==================================================
# Security & Performance
# ==================================================

# Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_WINDOW=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS & Security
CORS_ORIGIN=*
HELMET_ENABLED=true
MORGAN_LOGGING=combined

# ==================================================
# Development & Debug
# ==================================================

# Logging
LOG_LEVEL=info
DEBUG_ENABLED=false
VERBOSE_BRIDGE_LOGGING=false
METRICS_LOGGING_ENABLED=true

# Development Mode
NODE_ENV=development
DEV_MODE_ENABLED=false
MOCK_DATA_FALLBACK=true
