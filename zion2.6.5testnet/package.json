{
  "name": "zion-production-server",
  "version": "2.6.5",
  "description": "ZION Multi-Chain Production Server - FUNCTIONAL VERSION",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "pm2": "pm2 start server.js --name zion-production",
    "test": "curl http://localhost:8888/health",
    "health-check": "node -e \"require('http').get('http://localhost:8888/health', r => r.on('data', d => console.log(d.toString())))\""
  },
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "blockchain",
    "multi-chain",
    "bridge",
    "zion",
    "production"
  ],
  "author": "ZION Development Team",
  "license": "MIT"
}